generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id        Int   @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  bucket Bucket[]
}

model ServerContent{
  id        Int   @id @default(autoincrement())
  name      String
  fileName String
  fileid    String
}


model Bucket{
  id        Int   @id @default(autoincrement())
  name      String @unique
  createdBy Int 
  server  String
  createdAt DateTime @default(now())
  user User @relation(fields: [createdBy], references: [id])
  }
